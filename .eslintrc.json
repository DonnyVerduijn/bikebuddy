{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "strict": 0,
    "indent": "off",
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off"
  },
    "settings": {
      "react": {
        "createClass": "createReactClass",                                 
        "pragma": "React",  
        "version": "16.3", 
        "flowVersion": "0.53"
      },
      "propWrapperFunctions": [ "forbidExtraProps" ]    
    }
}
